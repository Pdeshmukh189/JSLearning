const TheSquareof= function (num) {
    return num * num;
  };
  console.log("-----------------------------STEP 1---------------------------------");
  console.log("The Square of 5 is:",TheSquareof(5)); 
  console.log("The Square of 6 is:",TheSquareof(6)); 
  console.log("The Square of 25 is:",TheSquareof(25)); 
  console.log("The Square of 100 is:",TheSquareof(100)); 
  console.log("The Square of 67.89 is:",TheSquareof(67.89)); 
  console.log("The Square of 59 is:",TheSquareof(59)); 
  
